pipeline {
    agent any
    
    environment {
        GEMINI_API_KEY = credentials('GEMINI_API_KEY')
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/Ayzazkhan/Godady-digilaxy-partner-page-automation.git',
                    credentialsId: 'github-credentials'
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                dir('content-generation') {
                    sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install google-generativeai requests
                    '''
                }
            }
        }
        
        stage('Generate Content') {
            steps {
                dir('content-generation') {
                    sh '''
                    . venv/bin/activate
                    python3 content_generator.py
                    '''
                }
            }
        }
        
        stage('Verify Content') {
            steps {
                dir('content-generation') {
                    sh '''
                    echo "ğŸ” DEEP VERIFICATION:"
                    echo "ğŸ“ Current files:"
                    ls -la
                    echo "ğŸ“„ File details:"
                    ls -la generated_content.json
                    echo "ğŸ“Š File content (first 2000 chars):"
                    head -c 2000 generated_content.json
                    echo ""
                    echo "ğŸ“ˆ Detailed validation:"
                    python3 -c "
import json
import os
try:
    with open('generated_content.json', 'r', encoding='utf-8') as f:
        data = json.load(f)
    print(f'âœ… SUCCESS: {len(data)} content pieces generated')
    print(f'ğŸ“ Total links: {sum(item.get(\\\"links_count\\\", 0) for item in data)}')
    print(f'ğŸ“ Sample content:')
    for i in range(min(2, len(data))):
        print(f'  {i+1}. {data[i][\\\"keyword\\\"]} - Links: {data[i].get(\\\"links_count\\\", 0)}')
        print(f'     Preview: {data[i][\\\"content\\\"][:100]}...')
except Exception as e:
    print(f'âŒ ERROR: {e}')
    print('Trying alternative encoding...')
    try:
        with open('generated_content.json', 'r') as f:
            content = f.read()
        print(f'File content: {content[:500]}')
    except Exception as e2:
        print(f'File read error: {e2}')
"
                    '''
                }
            }
        }
        
       stage('Push to GitHub') {
    steps {
        dir('content-generation') {
            sh '''
            echo "ğŸš€ Pushing to GitHub..."
            
            # Git configuration
            git config --global user.email "ayzazkhna82@gmail.com"
            git config --global user.name "Ayzazkhan"
            
            # Add and commit
            git add generated_content.json
            git commit -m "Auto-generated: Content pieces with links [Jenkins Build ${BUILD_NUMBER}]" || echo "No changes or already committed"
            
            # Push using same credentials as checkout
            git push origin main
            echo "âœ… Pushed to GitHub!"
            '''
        }
    }
}
    
    post {
        always {
            sh 'rm -rf content-generation/venv'
            archiveArtifacts artifacts: 'content-generation/generated_content.json', fingerprint: true
        }
        success {
            echo 'ğŸ‰ Content generation completed successfully!'
        }
    }
}
}
    
