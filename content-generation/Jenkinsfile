
pipeline {
    agent any
    
    environment {
        GEMINI_KEY = credentials('GEMINI_API_KEY')
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/Ayzazkhan/Godady-digilaxy-partner-page-automation.git',
                    credentialsId: 'github-credentials'
            }
        }
        
        stage('Verify Files') {
            steps {
                sh '''
                echo "ğŸ“ Files after checkout:"
                ls -la
                echo "ğŸ“„ Checking Python file:"
                ls -la content_generator.py || echo "âŒ content_generator.py not found"
                ls -la content.json || echo "âŒ content.json not found"
                '''
            }
        }
        
        stage('Setup & Run') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install google-generativeai requests
                python3 content_generator.py
                '''
            }
        }
    }
}
